<!DOCTYPE html>
<html>
<head>
    <title>Courses</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Courses</h1>
        <nav>
            <a href="/dashboard">Dashboard</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>
    <div class="container">
        <% courses.forEach(course => { %>
            <div class="card">
                <img src="<%= course.image %>" alt="Course Image">
                <h3><%= course.title %></h3>
                <p><%= course.description %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
